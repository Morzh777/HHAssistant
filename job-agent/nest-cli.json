{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": ["**/*.json", "**/*.txt"]
  },
  "watchModeOptions": {
    "watchAssets": true,
    "preserveWatchOutput": true
  }
}
